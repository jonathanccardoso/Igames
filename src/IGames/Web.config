<?xml version="1.0"?>
<configuration>
  <appSettings>
    <add key="ValidationSettings:UnobtrusiveValidationMode" value="None"/>
  </appSettings>
  <connectionStrings>
    <!-- Valera -->
    <add name="iGamesConnectionString" connectionString="Data Source=Valera;&#xA;Initial Catalog=2016TiiGrupo5;Persist Security Info=True;&#xA;User ID=2016TiiGrupo5;Password=Senha@555" providerName="System.Data.SqlClient"/>
    <!-- Local (IF) -->
    <add name="iGamesConnectionStringLocal" connectionString="Data Source=.\;&#xA;Initial Catalog=2016TiiGrupo5;Persist Security Info=True;&#xA;User ID=sa;Password=Senha" providerName="System.Data.SqlClient"/>
